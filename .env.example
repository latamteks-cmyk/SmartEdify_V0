#############################################
# Variables de Entorno (Ejemplo / Plantilla) #
#############################################

# === Base de datos (host / fuera de contenedor) ===
HOST_DB_HOST=localhost
HOST_DB_PORT=5433

# === Base de datos (dentro de Docker network) ===
POSTGRES_DB=smartedify
POSTGRES_USER=CHANGE_ME_DB_USER
POSTGRES_PASSWORD=CHANGE_ME_DB_PASSWORD
DB_HOST=db
DB_PORT=5432

# === Auth Service ===
AUTH_PORT=8082
AUTH_LOG_LEVEL=info
AUTH_USER_SERVICE_MODE=mock
#AUTH_USER_SERVICE_URL=http://localhost:8084
AUTH_USER_SERVICE_TIMEOUT_MS=3000
AUTH_USER_SERVICE_RETRIES=2
#AUTH_USER_SERVICE_API_KEY=CHANGE_ME
#AUTH_USER_SERVICE_VALIDATE_PATH=/internal/users/validate

# === Tenant Service ===
TENANT_PORT=8083
TENANT_LOG_LEVEL=info
TENANT_DB_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${DB_HOST}:${DB_PORT}/${POSTGRES_DB}
TENANT_OUTBOX_POLL_INTERVAL_MS=1000
TENANT_OUTBOX_BATCH_SIZE=50

# === JWT (Clave pública para validación) ===
# Colocar clave pública PEM (una sola línea escapada) o path gestionado externamente
TENANT_JWT_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----REEMPLAZAR-----END PUBLIC KEY-----

# Conexión que usará el servicio (desde host local fuera de Docker)
PGHOST=${HOST_DB_HOST}
PGPORT=${HOST_DB_PORT}
PGUSER=${POSTGRES_USER}
PGPASSWORD=${POSTGRES_PASSWORD}
PGDATABASE=${POSTGRES_DB}

# === Redis ===
REDIS_HOST=localhost
REDIS_PORT=6380

# === Docker Hub (solo ejemplo, NO usar credenciales reales) ===
DOCKERHUB_USERNAME=your_dockerhub_user
DOCKERHUB_TOKEN=YOUR_DOCKERHUB_PAT

# Notas:
# 1. Sustituye CHANGE_ME_* por valores reales en tu .env local (no commit).
# 2. HOST_DB_PORT es el puerto mapeado al host; DB_PORT el interno del contenedor.
# 3. DOCKERHUB_TOKEN debe ser un PAT con permisos de push/pull (guardar en secret de CI/CD).
