# Ejemplo de variables de entorno para Auth Service
AUTH_PORT=8080
AUTH_DB_URL=postgres://user:pass@localhost:5432/authdb
# JWT (se separan secretos y TTLs)
AUTH_JWT_ACCESS_SECRET=CHANGE_ME_ACCESS_SECRET
AUTH_JWT_REFRESH_SECRET=CHANGE_ME_REFRESH_SECRET
AUTH_JWT_ACCESS_TTL=900s
AUTH_JWT_REFRESH_TTL=2592000

# Rate limiting / brute force
AUTH_LOGIN_WINDOW_MS=60000
AUTH_LOGIN_MAX_ATTEMPTS=10
AUTH_BRUTE_WINDOW_SEC=300
AUTH_BRUTE_MAX_ATTEMPTS=20

# Argon2 (tuning opcional)
AUTH_ARGON2_MEMORY_KIB=19456
AUTH_ARGON2_ITERATIONS=3
AUTH_ARGON2_PARALLELISM=1
AUTH_WEBHOOK_URL=
AUTH_LOG_LEVEL=info
