{
  "type": "module",
  "name": "auth-service",
  "version": "1.0.0",
  "description": "1. Instala dependencias y configura variables de entorno usando `.env.example`.\r 2. Ejecuta el servicio con el comando correspondiente (ejemplo: `go run cmd/server/main.go` o `npm start`).",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
  "build": "tsc -p tsconfig.build.json",
    "start": "node dist/cmd/server/main.js",
    "dev": "nodemon --watch internal --watch cmd --exec ts-node cmd/server/main.ts",
    "migrate": "node-pg-migrate up -m ./migrations_clean --verbose",
    "migrate:create": "node-pg-migrate create -m ./migrations_clean",
  "test": "jest --config jest.config.cjs --runInBand --coverage",
  "test:all": "jest --config jest.config.cjs --runInBand --forceExit",
  "test:security": "jest --config jest.config.cjs --runInBand tests/security --forceExit",
  "test:proj:security": "jest --config jest.config.cjs --selectProjects security --runInBand",
  "test:proj:integration": "jest --config jest.config.cjs --selectProjects integration --runInBand",
  "test:proj:unit": "jest --config jest.config.cjs --selectProjects unit --runInBand",
  "test:proj:contract": "jest --config jest.config.cjs --selectProjects contract --runInBand",
  "test:rbac:integration": "jest --config jest.config.cjs --selectProjects integration --runInBand --testPathPattern=authorize.integration.test.ts",
  "test:rbac:contract": "jest --config jest.config.cjs --selectProjects contract --runInBand",
    "test:rbac": "npm run test:rbac:integration && npm run test:rbac:contract",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "jwks:rotate": "ts-node jobs/jwks-rotate.ts",
    "format": "prettier . --write"
  },
  "dependencies": {
    "@smartedify/shared": "^0.1.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.53.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.53.0",
    "@opentelemetry/sdk-node": "^0.53.0",
    "argon2": "^0.41.1",
    "dotenv": "^17.2.2",
    "express": "^4.21.2",
    "express-rate-limit": "^7.3.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "pino": "^9.9.5",
    "pino-http": "^9.0.0",
    "prom-client": "^15.1.3",
    "uuid": "^8.3.2",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^24.3.3",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^29.7.0",
    "node-pg-migrate": "^7.6.1",
    "nodemon": "^2.0.22",
    "prettier": "^3.3.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "resolutions": {
    "pino": "9.9.5"
  },
  "keywords": [
    "auth",
    "jwt",
    "web",
    "smartedify"
  ],
  "author": "Equipo Auth",
  "license": "MIT"
}
