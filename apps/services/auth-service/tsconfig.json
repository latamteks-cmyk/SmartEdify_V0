{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@db/*": ["internal/adapters/db/*"],
      "@smartedify/shared": ["../../../packages/shared/src/index.ts"],
      "@smartedify/shared/*": ["../../../packages/shared/src/*"]
    },
    "types": ["node", "jest"]
  },
  "include": ["internal", "cmd", "tests", "migrations_ts", "jobs"]
}
