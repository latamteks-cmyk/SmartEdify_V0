{
  "name": "tenant-service",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/cmd/server/main.js",
  "scripts": {
    "dev": "tsx watch cmd/server/main.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/cmd/server/main.js",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:ci": "cross-env SKIP_DB_TESTS=1 vitest run",
    "test:unit": "cross-env SKIP_DB_TESTS=1 vitest run",
    "test:watch": "vitest --setupFiles tests/setup-env.ts",
    "test:integration": "vitest run tests/integration",
    "test:smoke": "vitest run tests/smoke.test.ts"
  },
  "dependencies": {
    "@smartedify/shared": "^0.1.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.53.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.53.0",
    "@opentelemetry/sdk-node": "^0.53.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.0",
    "fastify-plugin": "^4.5.1",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "pg": "^8.12.0",
    "pino": "^8.19.0",
    "pino-pretty": "^11.2.2",
    "prom-client": "^15.1.2",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.11.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "vitest": "^1.6.0"
  }
}
